# ================================================
# Phantom Library 环境变量配置示例
# ================================================
# 复制此文件为 .env 并填入真实的配置值

# -------------------- 应用配置 --------------------
APP_NAME=Phantom Library
APP_VERSION=2.7.0
DEBUG=false
ENVIRONMENT=production

# -------------------- API密钥 --------------------
# DeepSeek AI API密钥（用于Mind Hack和RAG聊天功能）
# 获取地址: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# -------------------- 数据库 --------------------
# SQLite数据库文件路径
DATABASE_URL=sqlite:///./backend/phantom_database.db

# -------------------- CORS配置 --------------------
# 允许的跨域来源（逗号分隔）
# 开发环境示例: http://localhost:5173,http://localhost:3000
# 生产环境请设置为实际域名
ALLOWED_ORIGINS=http://localhost:5173

# -------------------- 文件上传 --------------------
# 最大文件大小（字节）默认50MB
MAX_FILE_SIZE=52428800

# 允许的文件扩展名（逗号分隔）
ALLOWED_EXTENSIONS=pdf,txt,md,png,jpg,jpeg

# -------------------- OCR配置 --------------------
# OCR处理工作线程数
OCR_WORKERS=4

# OCR处理超时时间（秒）
OCR_TIMEOUT=240

# OCR引擎DPI设置（建议72-150，越高越慢但更清晰）
OCR_DPI=72

# -------------------- RAG配置 --------------------
# 是否启用RAG（检索增强生成）功能
RAG_ENABLED=true

# 嵌入模型名称（sentence-transformers模型）
EMBEDDING_MODEL=all-MiniLM-L6-v2

# 向量数据库存储路径
VECTOR_DB_PATH=./backend/phantom_memory

# RAG检索结果数量
RAG_RESULTS_COUNT=2

# -------------------- 安全配置 --------------------
# 应用密钥（用于会话加密等，生产环境务必修改）
SECRET_KEY=your_secret_key_here_change_in_production

# -------------------- 日志配置 --------------------
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/phantom.log
